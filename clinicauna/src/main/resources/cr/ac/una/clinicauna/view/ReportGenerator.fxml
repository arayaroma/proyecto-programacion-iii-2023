<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXTextField?>
<?import java.lang.String?>
<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="TOP_CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" styleClass="bg-gray" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="cr.ac.una.clinicauna.controller.ReportGeneratorController">
   <children>
      <VBox alignment="CENTER">
         <children>
            <Label text="Report Generator">
               <styleClass>
                  <String fx:value="title" />
                  <String fx:value="h1" />
               </styleClass></Label>
            <HBox fx:id="hbQueryResult" alignment="CENTER" spacing="20.0">
               <children>
                  <VBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" spacing="20.0" HBox.hgrow="ALWAYS">
                     <children>
                        <VBox>
                           <children>
                              <Label text="Report Generation">
                                 <styleClass>
                                    <String fx:value="h2" />
                                    <String fx:value="title" />
                                 </styleClass>
                              </Label>
                              <VBox spacing="20.0">
                                 <children>
                                    <VBox>
                                       <children>
                                          <Label fx:id="lbRecipientEmail" styleClass="h3" text="recipientEmail" />
                                          <JFXTextField fx:id="tfRecipientEmail" focusColor="#ce7711">
                                             <styleClass>
                                                <String fx:value="bg-black" />
                                                <String fx:value="h3" />
                                             </styleClass>
                                          </JFXTextField>
                                       </children>
                                    </VBox>
                                    <HBox spacing="20.0">
                                       <children>
                                          <ComboBox fx:id="cbReportFrequency" maxHeight="1.7976931348623157E308" prefWidth="300.0" promptText="Frequency" />
                                          <DatePicker fx:id="dpReportDate" editable="false" promptText="Report Date" styleClass="h3" />
                                       </children>
                                    </HBox>
                                 </children>
                              </VBox>
                           </children>
                        </VBox>
                        <VBox>
                           <children>
                              <Label text="Report Information">
                                 <styleClass>
                                    <String fx:value="h2" />
                                    <String fx:value="title" />
                                 </styleClass>
                              </Label>
                              <VBox spacing="10.0">
                                 <children>
                                    <HBox spacing="20.0">
                                       <children>
                                          <VBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308">
                                             <children>
                                                <Label fx:id="lbReportName" styleClass="h3" text="reportName" />
                                                <JFXTextField fx:id="tfReportName" focusColor="#ce7711">
                                                   <styleClass>
                                                      <String fx:value="bg-black" />
                                                      <String fx:value="h3" />
                                                   </styleClass>
                                                </JFXTextField>
                                             </children>
                                          </VBox>
                                          <VBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308">
                                             <children>
                                                <Label fx:id="lbReportDescription" styleClass="h3" text="reportDescription" />
                                                <JFXTextField fx:id="tfReportDescription" focusColor="#ce7711">
                                                   <styleClass>
                                                      <String fx:value="bg-black" />
                                                      <String fx:value="h3" />
                                                   </styleClass>
                                                </JFXTextField>
                                             </children>
                                          </VBox>
                                       </children>
                                    </HBox>
                                    <VBox>
                                       <children>
                                          <Label fx:id="lbReportQuery" styleClass="h3" text="reportQuery" />
                                          <JFXTextField fx:id="tfReportQuery" focusColor="#ce7711">
                                             <styleClass>
                                                <String fx:value="bg-black" />
                                                <String fx:value="h3" />
                                             </styleClass>
                                          </JFXTextField>
                                       </children>
                                    </VBox>
                                 </children>
                              </VBox>
                           </children>
                        </VBox>
                        <Button mnemonicParsing="false" onAction="#generateReport" text="Generate">
                           <styleClass>
                              <String fx:value="btn" />
                              <String fx:value="orange-color" />
                           </styleClass>
                        </Button>
                     </children>
                  </VBox>
                  <TableView fx:id="tvQueryResult" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefWidth="700.0" HBox.hgrow="ALWAYS">
                     <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                     </columnResizePolicy>
                     <columns>
                        <TableColumn maxWidth="1.7976931348623157E308" prefWidth="-1.0" />
                     </columns>
                  </TableView>
               </children>
            </HBox>
         </children>
         <VBox.margin>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </VBox.margin>
      </VBox>
   </children>
   <stylesheets>
      <URL value="@../style/index.css" />
      <URL value="@../style/patienthistory.css" />
      <URL value="@../style/userregister.css" />
   </stylesheets>
</VBox>
