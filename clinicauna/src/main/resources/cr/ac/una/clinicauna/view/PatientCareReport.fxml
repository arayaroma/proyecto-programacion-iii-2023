<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXTextField?>
<?import java.lang.String?>
<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="parent" alignment="CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" spacing="30.0" styleClass="bg-gray" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="cr.ac.una.clinicauna.controller.PatientCareReportController">
   <children>
      <Label styleClass="h2" text="%patients" VBox.vgrow="ALWAYS">
         <graphic>
            <ImageView fitHeight="70.0" fitWidth="70.0" pickOnBounds="true" smooth="false">
               <image>
                  <Image url="@../img/reporte.png" />
               </image>
            </ImageView>
         </graphic>
         <VBox.margin>
            <Insets top="20.0" />
         </VBox.margin></Label>
      <HBox alignment="CENTER" spacing="20.0" VBox.vgrow="ALWAYS">
         <children>
            <VBox alignment="TOP_CENTER" maxWidth="1.7976931348623157E308" spacing="20.0" HBox.hgrow="ALWAYS">
               <children>
                  <HBox alignment="CENTER_LEFT" spacing="20.0">
                     <children>
                        <JFXTextField fx:id="txfSearchPatient" onKeyPressed="#searchPatientKeyEvent" promptText="%searchUser" styleClass="h3" />
                        <ComboBox fx:id="cbSearchParameter" promptText="%searchParameter" />
                     </children>
                  </HBox>
                  <TableView fx:id="tblPatientsView" maxHeight="500.0" maxWidth="1.7976931348623157E308">
                     <columns>
                        <TableColumn fx:id="tcIdentification" maxWidth="1.7976931348623157E308" prefWidth="-1.0" text="%identification" />
                        <TableColumn fx:id="tcName" maxWidth="1.7976931348623157E308" prefWidth="-1.0" text="%name" />
                        <TableColumn fx:id="tcLastName" maxWidth="1.7976931348623157E308" prefWidth="-1.0" text="%firstLastName" />
                        <TableColumn fx:id="tcPhone" maxWidth="1.7976931348623157E308" prefWidth="-1.0" text="%phoneNumber" />
                        <TableColumn fx:id="tcRole" maxWidth="1.7976931348623157E308" prefWidth="-1.0" text="%birthDate" />
                     </columns>
                     <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                     </columnResizePolicy>
                  </TableView>
               </children>
            </VBox>
            <VBox alignment="TOP_CENTER" maxWidth="600.0">
               <children>
                  <VBox VBox.vgrow="ALWAYS">
                     <children>
                        <HBox alignment="CENTER_LEFT">
                           <children>
                              <Label text="%generalInformation">
                                 <styleClass>
                                    <String fx:value="h2" />
                                    <String fx:value="title" />
                                 </styleClass>
                              </Label>
                           </children>
                        </HBox>
                        <HBox alignment="CENTER_LEFT" fillHeight="false" spacing="5.0" VBox.vgrow="ALWAYS">
                           <children>
                              <Label text="%identification">
                                 <styleClass>
                                    <String fx:value="h3" />
                                    <String fx:value="title" />
                                 </styleClass>
                              </Label>
                              <Label fx:id="lblIdentification" />
                           </children>
                        </HBox>
                        <HBox alignment="CENTER_LEFT" spacing="5.0" VBox.vgrow="ALWAYS">
                           <children>
                              <Label text="%fullName">
                                 <styleClass>
                                    <String fx:value="h3" />
                                    <String fx:value="title" />
                                 </styleClass>
                              </Label>
                              <Label fx:id="lblFullName" />
                           </children>
                        </HBox>
                        <HBox alignment="CENTER_LEFT" spacing="5.0" VBox.vgrow="ALWAYS">
                           <children>
                              <Label text="%birthDate">
                                 <styleClass>
                                    <String fx:value="h3" />
                                    <String fx:value="title" />
                                 </styleClass>
                              </Label>
                              <Label fx:id="lblBirthDate" />
                           </children>
                        </HBox>
                        <HBox alignment="CENTER_LEFT" spacing="5.0" VBox.vgrow="ALWAYS">
                           <children>
                              <Label text="%phoneNumber">
                                 <styleClass>
                                    <String fx:value="h3" />
                                    <String fx:value="title" />
                                 </styleClass>
                              </Label>
                              <Label fx:id="lblPhoneNumber" />
                           </children>
                        </HBox>
                        <HBox alignment="CENTER_LEFT" spacing="5.0" VBox.vgrow="ALWAYS">
                           <children>
                              <Label text="%gender">
                                 <styleClass>
                                    <String fx:value="h3" />
                                    <String fx:value="title" />
                                 </styleClass>
                              </Label>
                              <Label fx:id="lblGender" />
                           </children>
                        </HBox>
                        <Button mnemonicParsing="false" onAction="#btnViewPatientCare" text="%viewPatientCare">
                           <padding>
                              <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
                           </padding>
                           <styleClass>
                              <String fx:value="btn" />
                              <String fx:value="orange-color" />
                           </styleClass>
                        </Button>
                     </children>
                     <VBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </VBox.margin>
                  </VBox>
               </children>
               <styleClass>
                  <String fx:value="bg-gray" />
                  <String fx:value="component" />
               </styleClass>
            </VBox>
         </children>
         <VBox.margin>
            <Insets left="10.0" right="10.0" />
         </VBox.margin>
      </HBox>
      <HBox alignment="CENTER" spacing="250.0" VBox.vgrow="ALWAYS">
         <children>
            <Button mnemonicParsing="false" onAction="#btnGeneratePatientCareReport" styleClass="btn" text="%generateReport">
               <padding>
                  <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
               </padding>
            </Button>
         </children>
         <VBox.margin>
            <Insets bottom="10.0" />
         </VBox.margin>
      </HBox>
   </children>
   <stylesheets>
      <URL value="@../style/index.css" />
      <URL value="@../style/patienthistory.css" />
   </stylesheets>
</VBox>
