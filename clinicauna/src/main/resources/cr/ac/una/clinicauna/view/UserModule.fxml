<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXTextField?>
<?import java.lang.String?>
<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="parent" alignment="CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefWidth="750.0" spacing="30.0" styleClass="bg-gray" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="cr.ac.una.clinicauna.controller.UserModuleController">
   <children>
      <Label styleClass="h2" text="%lblUsers" VBox.vgrow="ALWAYS" />
      <HBox VBox.vgrow="ALWAYS">
         <children>
            <Button mnemonicParsing="false" onAction="#btnNewUserAction" text="%btnNewUser">
               <styleClass>
                  <String fx:value="confirm-color" />
                  <String fx:value="btn" />
               </styleClass>
               <HBox.margin>
                  <Insets />
               </HBox.margin>
            </Button>
         </children>
         <VBox.margin>
            <Insets left="20.0" right="20.0" />
         </VBox.margin>
      </HBox>
      <HBox alignment="CENTER_LEFT" spacing="20.0" VBox.vgrow="ALWAYS">
         <children>
            <JFXTextField promptText="%txfSearchUser" styleClass="h3" />
            <ComboBox fx:id="cbSearchParameter" promptText="%cbSearchParameter" />
         </children>
         <VBox.margin>
            <Insets left="20.0" right="20.0" />
         </VBox.margin>
      </HBox>
      <TableView fx:id="tblUsersView" maxHeight="500.0" maxWidth="1.7976931348623157E308" prefHeight="300.0" VBox.vgrow="ALWAYS">
         <columns>
            <TableColumn fx:id="tcIdentification" maxWidth="1.7976931348623157E308" prefWidth="-1.0" text="%tcIdentification" />
            <TableColumn fx:id="tcUser" maxWidth="1.7976931348623157E308" prefWidth="-1.0" text="%tcUser" />
            <TableColumn fx:id="tcName" maxWidth="1.7976931348623157E308" prefWidth="-1.0" text="%tcName" />
            <TableColumn fx:id="tcLastName" maxWidth="1.7976931348623157E308" prefWidth="-1.0" text="%tcLastName" />
            <TableColumn fx:id="tcPhone" maxWidth="1.7976931348623157E308" prefWidth="-1.0" text="%tcPhone" />
            <TableColumn fx:id="tcRole" maxWidth="1.7976931348623157E308" prefWidth="-1.0" text="%tcRole" />
         </columns>
         <VBox.margin>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </VBox.margin>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
      <HBox alignment="CENTER" spacing="250.0" VBox.vgrow="ALWAYS">
         <children>
            <Button fx:id="btnEdit" mnemonicParsing="false" onAction="#btnEditUserAction" text="%btnEdit">
               <padding>
                  <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
               </padding>
               <styleClass>
                  <String fx:value="btn" />
                  <String fx:value="orange-color" />
               </styleClass>
            </Button>
            <Button mnemonicParsing="false" onAction="#btnDeleteUserAction" text="%btnDelete">
               <padding>
                  <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
               </padding>
               <styleClass>
                  <String fx:value="btn" />
                  <String fx:value="red-color" />
               </styleClass>
            </Button>
         </children>
         <VBox.margin>
            <Insets bottom="10.0" />
         </VBox.margin>
      </HBox>
   </children>
   <stylesheets>
      <URL value="@../style/index.css" />
      <URL value="@../style/usermodule.css" />
   </stylesheets>
</VBox>
